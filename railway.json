
{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "multiRegionConfig": {
      "asia-southeast1-eqsg3a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "parallel --ungroup --halt now,fail=1 ::: 'arq app.workers.artifacts.worker.WorkerSettings' 'arq app.workers.agents.worker.WorkerSettings' 'arq app.workers.messages.worker.WorkerSettings' 'arq app.workers.sessions.worker.WorkerSettings'"
  }
}